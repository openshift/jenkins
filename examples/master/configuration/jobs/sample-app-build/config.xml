<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Starts a build in OpenShift</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty plugin="naginator@1.15">
      <optOut>false</optOut>
    </com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty>
    <se.diabol.jenkins.pipeline.PipelineProperty plugin="delivery-pipeline-plugin@0.8.11">
      <taskName>Build Docker Image</taskName>
      <stageName>Build</stageName>
    </se.diabol.jenkins.pipeline.PipelineProperty>
    <hudson.plugins.promoted__builds.JobPropertyImpl plugin="promoted-builds@2.21">
      <activeProcessNames>
        <string>Deploy</string>
      </activeProcessNames>
    </hudson.plugins.promoted__builds.JobPropertyImpl>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <assignedNode>master</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>

    <!--
	the sample-app deployment config defined at https://github.com/openshift/origin/examples/jenkins/sample-app-masterslave-ci.json
	sets replicas at 0, since we do not want to deploy until the testing in the stage project has occurred, and the promotion has been
	manually approved.  In addition to triggering the build, the combination of these 2 steps will verify that no replicas are up, but that a new deployment has been triggered
	based on the image change.
    -->
    
    <com.openshift.jenkins.plugins.pipeline.OpenShiftBuilder>
      <apiURL>https://openshift.default.svc.cluster.local</apiURL>
      <bldCfg>sample-app</bldCfg>
      <namespace>ci</namespace>
      <authToken></authToken>
    </com.openshift.jenkins.plugins.pipeline.OpenShiftBuilder>

    <com.openshift.jenkins.plugins.pipeline.OpenShiftDeploymentVerifier>
      <apiURL>https://openshift.default.svc.cluster.local</apiURL>
      <depCfg>frontend</depCfg>
      <namespace>ci</namespace>
      <replicaCount>0</replicaCount>
      <authToken></authToken>
    </com.openshift.jenkins.plugins.pipeline.OpenShiftDeploymentVerifier>

  </builders>
  <publishers/>
  <buildWrappers>
    <hudson.plugins.ansicolor.AnsiColorBuildWrapper plugin="ansicolor@0.4.1">
      <colorMapName>css</colorMapName>
    </hudson.plugins.ansicolor.AnsiColorBuildWrapper>
  </buildWrappers>
</project>
