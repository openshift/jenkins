<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Deploy the application on OpenShift</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty plugin="naginator@1.15">
      <optOut>true</optOut>
    </com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty>
    <se.diabol.jenkins.pipeline.PipelineProperty plugin="delivery-pipeline-plugin@0.8.11">
      <taskName>Application Deploy</taskName>
      <stageName>Deploy</stageName>
    </se.diabol.jenkins.pipeline.PipelineProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <assignedNode>master</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>

    <!--
	Whenever the testing in the stage project is deemed complete, a Jenkins adminstrator will go back to the sample-app-build job and approve the promotion.
	That will kick off this job.  This job will scale up to a replica count of 1 the previously confirmed deployment in the sample-app-build job, and then confirm the
	valid deployment based on the latest image has scaled up to a replica count of 1
    -->
    <com.openshift.jenkins.plugins.pipeline.OpenShiftScaler>
      <apiURL>https://openshift.default.svc.cluster.local</apiURL>
      <depCfg>frontend</depCfg>
      <namespace>ci</namespace>
      <replicaCount>1</replicaCount>
      <authToken></authToken>
    </com.openshift.jenkins.plugins.pipeline.OpenShiftScaler>

    <com.openshift.jenkins.plugins.pipeline.OpenShiftDeploymentVerifier>
      <apiURL>https://openshift.default.svc.cluster.local</apiURL>
      <depCfg>frontend</depCfg>
      <namespace>ci</namespace>
      <replicaCount>1</replicaCount>
      <authToken></authToken>
    </com.openshift.jenkins.plugins.pipeline.OpenShiftDeploymentVerifier>

  </builders>
  <publishers/>
  <buildWrappers/>
</project>
